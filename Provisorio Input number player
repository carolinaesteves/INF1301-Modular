from tkinter import *
from tkinter.ttk import *

def exibeValor():
    mensagem["text"]="Valor: "+combo.get()

window = Tk()
window.title("NÃºmero de Jogadores")
window.geometry('200x200')
combo = Combobox(window)
combo['values'] = (2, 3, 4)
combo.current(0)
combo.pack()
botao = Button(window, text="Confirmar", command=exibeValor)
botao.pack()
mensagem = Label(window, text="Valor: ", font="arial 15 bold")
mensagem.pack()
window.mainloop()
